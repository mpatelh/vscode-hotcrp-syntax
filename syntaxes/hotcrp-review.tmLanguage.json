{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "hotcrp-review",
	"patterns": [
		{
			"include": "#comment"
		},
        {
            "include": "text.html.markdown"
        }
	],
	"repository": {
		"comment": {
			"patterns": [{
				"name": "comment.hotcrp-review",
				"match": "^(==[\\*\\-\\+]==.*$)"
			}]
		}
	},
	"scopeName": "source.hotcrp-review"
}